<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <h1>New Ad</h1>
        <form method="POST" action="/ads/new" enctype="multipart/form-data">
            <input type="text" name="title" class="form-control" placeholder="Title"/>
            <input type="text" name="name" class="form-control" placeholder="Name"/>
            <input type="text" name="phonenumber" class="form-control" placeholder="Phone Number"/>

            <textarea name="description" class="form-control" cols="20" rows="10">
            </textarea>

            <input type="file" name="images[0]"/>
            <input type="file" name="images[1]"/>
            <input type="file" name="images[2]"/>
            <input type="file" name="images[3]"/>
            <input type="file" name="images[4]"/>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>